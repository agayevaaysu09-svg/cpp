#include <iostream>
using namespace std;

int saheHesabla(int a) {
    return a * a;
}


int perimetrHesabla(int a) {
    return 4 * a;
}

int main() {
    int a;
    cout << "Teref daxil et: ";
    cin >> a;

    int sahe = saheHesabla(a);
    int perimetr = perimetrHesabla(a);

    cout << "Sahe: " << sahe << "  Perimetr: " << perimetr;

    return 0;
}