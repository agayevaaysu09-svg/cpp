void insertArray(int A[], int nA, int B[], int nB, int k) {
    int C[100];
    int idx = 0;

    for (int i = 0; i <= k; i++)
        C[idx++] = A[i];

    for (int i = 0; i < nB; i++)
        C[idx++] = B[i];

    for (int i = k + 1; i < nA; i++)
        C[idx++] = A[i];

    // Nəticəni göstərmək
    for (int i = 0; i < idx; i++)
        cout << C[i] << " ";
}