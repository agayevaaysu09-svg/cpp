void stats(int a[], int n) {
    int max = a[0], min = a[0];
    double sum = 0, mult = 1;

    for (int i = 0; i < n; i++) {
        if (a[i] > max) max = a[i];
        if (a[i] < min) min = a[i];
        sum += a[i];
        mult *= a[i];
    }

    cout << "Max: " << max << endl;
    cout << "Min: " << min << endl;
    cout << "Ededi orta: " << sum / n << endl;
    cout << "Hendesi orta: " << pow(mult, 1.0 / n) << endl;
}